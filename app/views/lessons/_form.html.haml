= form_for @lesson do |f|
  - if @lesson.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lesson.errors.count, "error")} prohibited this lesson from being saved:"
      %ul
        - @lesson.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_field :body
  .prev
    = f.label :prev
    = collection_select(:lesson, :prev, Lesson.all, :id, :title) 
  .next
    = f.label :next
    = collection_select(:lesson, :next, Lesson.all, :id, :title) 
  .actions
    = f.submit 'Save'
