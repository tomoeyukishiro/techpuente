%h1 List of Modules

%div#lessons.cf
  %nav#admin-panel
    = link_to 'Create New Lesson', new_lesson_path
  - @lessons.each do |lesson|
    %article
      %p= lesson.title
      = link_to lesson do
        = image_tag("newLogo.jpeg")
      %footer
        %span= link_to 'Show', lesson
        %span= link_to 'Edit', edit_lesson_path(lesson)
        %span= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' }, id: 'delete_'+lesson.id.to_s

  
